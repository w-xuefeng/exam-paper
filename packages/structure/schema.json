        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "const": "page",
            "description": "类型，固定为 'page'"
          },
          "style": {
            "type": "object",
            "description": "样式设置",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "inline",
                  "css"
                ],
                "description": "样式类型"
              },
              "value": {
                "type": "object",
                "description": "样式对象"
              }
            }
          },
          "layout": {
            "type": "array",
            "description": "页面布局元素",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "description": "页眉",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "header",
                      "description": "类型，固定为 'header'"
                    },
                    "value": {
                      "type": "object",
                      "description": "内容值和样式",
                      "properties": {
                        "value": {
                          "type": "string",
                          "description": "内容值"
                        },
                        "style": {
                          "type": "object",
                          "description": "样式设置",
                          "properties": {
                            "type": {
                              "type": "string",
                              "enum": [
                                "inline",
                                "css"
                              ],
                              "description": "样式类型"
                            },
                            "value": {
                              "type": "object",
                              "description": "样式对象"
                            }
                          }
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "type",
                    "value"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "标题",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "title",
                      "description": "类型，固定为 'title'"
                    },
                    "value": {
                      "type": "object",
                      "description": "内容值和样式",
                      "properties": {
                        "value": {
                          "type": "string",
                          "description": "内容值"
                        },
                        "style": {
                          "type": "object",
                          "description": "样式设置",
                          "properties": {
                            "type": {
                              "type": "string",
                              "enum": [
                                "inline",
                                "css"
                              ],
                              "description": "样式类型"
                            },
                            "value": {
                              "type": "object",
                              "description": "样式对象"
                            }
                          }
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "type",
                    "value"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "描述",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "description",
                      "description": "类型，固定为 'description'"
