                            "properties": {
                              "value": {
                                "type": "string",
                                "description": "问题选项内容值"
                              },
                              "style": {
                                "type": "object",
                                "description": "问题选项样式设置",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "enum": [
                                      "inline",
                                      "css"
