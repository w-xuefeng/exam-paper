                                  },
                                  "value": {
                                    "type": "object",
                                    "description": "样式对象"
                                  }
                                }
                              }
                            }
                          }
                        },
                        "score": {
                          "type": "object",
                          "description": "问题分值",
                          "properties": {
                            "formatter": {
                              "type": "string",
                              "description": "分值格式化模版"
                            },
                            "value": {
                              "type": "number",
                              "description": "分值"
                            }
                          }
                        },
                        "answer": {
                          "type": "object",
                          "description": "问题答案",
                          "properties": {
                            "type": {
                              "type": "string",
                              "const": "answer",
                              "description": "类型，固定为 'answer'"
                            },
                            "value": {
                              "type": "object",
                              "description": "内容值和样式",
                              "properties": {
                                "value": {
                                  "type": "string",
                                  "description": "内容值"
                                },
                                "style": {
                                  "type": "object",
                                  "description": "样式设置",
                                  "properties": {
                                    "type": {
                                      "type": "string",
