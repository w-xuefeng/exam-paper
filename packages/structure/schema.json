                            "calculation",
                            "matching",
                            "ordering",
                            "cloze-test",
                            "comprehension",
                            "essay",
                            "ancient-poetry-appreciation",
                            "classical-chinese-reading",
                            "modern-text-reading",
                            "sentence-mending",
                            "language-expression",
                            "quotes-recitation",
                            "proof",
                            "application",
                            "inquiry",
                            "listening-comprehension",
                            "grammar-fill-in",
                            "error-correction",
                            "translation",
                            "situational-dialogue",
                            "experimental-design",
                            "experimental-operation",
                            "circuit-design",
                            "chemical-equation",
                            "substance-inference",
                            "genetic-diagram",
                            "chart-reading",
                            "material-analysis",
                            "case-analysis",
                            "discrimination",
                            "commentary",
                            "map-reading",
                            "regional-analysis",
                            "other"
