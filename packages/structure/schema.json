                        "style": {
                          "type": "object",
                          "description": "样式设置",
                          "properties": {
                            "type": {
                              "type": "string",
                              "enum": [
                                "inline",
                                "css"
                              ],
                              "description": "样式类型"
                            },
                            "value": {
                              "type": "object",
                              "description": "样式对象"
                            }
                          }
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "type",
                    "value"
                  ],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "description": "空白",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "blank",
